APP_NAME="NOVAX TRAVEL API"
APP_ENV=production
APP_KEY=base64:CHANGE_ME
APP_DEBUG=false
APP_URL=https://api.novaxtravel.com

LOG_CHANNEL=stderr
LOG_LEVEL=info

DB_CONNECTION=pgsql
DB_HOST=YOUR_DB_HOST
DB_PORT=5432
DB_DATABASE=YOUR_DB_NAME
DB_USERNAME=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_SSLMODE=require

JWT_SECRET=CHANGE_ME
JWT_TTL=1440
JWT_REFRESH_TTL=20160

# Comma-separated list
CORS_ALLOWED_ORIGINS=https://novaxtravel.com,https://admin.novaxtravel.com,http://localhost:3000

# File uploads
FILESYSTEM_DISK=local

# Mail (set to log in production until you wire a provider)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=no-reply@novaxtravel.com
MAIL_FROM_NAME="NOVAX Travel"
